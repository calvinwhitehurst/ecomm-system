<html>
    <head>
        <title>Print Shoe Pull List</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paper-css/0.4.1/paper.min.css">
        <script src="https://cdn.jsdelivr.net/jsbarcode/3.6.0/barcodes/JsBarcode.code128.min.js"></script>  
        <style>
        @page { 
            size: letter 
        }

        .container {
            display: grid;
        }
        
        .ui.table{
            border-collapse: collapse;
        }

        thead, td, th, .ui.table{
            border: black 1px solid !important;
        }
        .logo{
            float: left;
            width: 300px;
        }

        .scan{
            display: flex;
            justify-content: center;
            padding-top: 150px;
        }

        @media print {
            header {
                display: none!important;
            }
        } 

        .print {
            cursor: pointer;
            color: #000000;
        }

        </style>

    </head>
    <body class="letter">      
        <header>
            <div class="ui top attached tabular menu">
                <div class="item"><a class="print" onclick="window.print();">Print <i class="print icon"></i></a></div>
            </div>
        </header>
        <section class="sheet padding-10mm">
            <article>
                <div class="container">
                    <h3 style="margin: 0 0 1em 0;">Pull These Shoes</h3>
                    <table class="ui celled table" style="margin: 0 0 1em 0; font-size:12px;">
                        <thead>
                            <tr>
                                <th>Quantity</th>
                                <th>SKU</th>
                                <th>Item</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < rows.length; i++){ %>
                                <tr>
                                    <td><%= rows[i].amount %>x</td>
                                    <td><%= rows[i].sku %></td>
                                    <td><%= rows[i].title %></td>  
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </article>
        </section>
    </body>
</html>